# IMAP
IMAP_HOST=
IMAP_PORT=
IMAP_USER=
IMAP_PASS=
IMAP_FOLDER=INBOX


# MinIO / S3-kompatibel
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_BUCKET=
S3_PREFIX=           
AWS_REGION=us-east-1            # MinIO akzeptiert meist egal, nimm us-east-1
ONLY_WAV=1                      # 1 = nur .wav hochladen

# optional: Dateinamenmuster wie bei dir
FILENAME_REGEX=^\d+_\d{8}-\d{6}\.wav$

# Poll-Intervall in Sekunden
POLL_INTERVAL=30

# 1 = nach Verarbeitung als gelesen markieren, 0 = ungelesen lassen
MARK_SEEN=1



OPENAI_API_KEY=sk-
# optional
TRANSCRIBE_MODEL=gpt-4o-transcribe   # oder whisper-1
TRANSCRIBE_LANG=de   


# Allowed senders (kommasepariert, case-insensitive). Beispiel: alice@foo.tld,bob@bar.tld
ALLOWED_SENDERS=


# Webhook
WEBHOOK_URL=
WEBHOOK_TIMEOUT=10
WEBHOOK_HEADERS=Authorization: Bearer 
WEBHOOK_RETRIES=3
WEBHOOK_RETRY_BACKOFF_SECONDS=3


